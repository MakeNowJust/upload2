- if flash[:notice].present?
  %div.row
    %div.col.s12
      %div.card-panel.teal.lighten-2
        %span.white-text= flash[:notice]
- if flash[:alert].present?
  %div.row
    %div.col.s12
      %div.card-panel.red.lighten-2
        %span.white-text= flash[:alert]

%div.row
  %div.col.s12
    %h3
      = @file_info.name
      = link_to "Download", download_path(@file_info), class: "waves-effect waves-light btn"

%div.row
  %div.col.s12
    %h4 File Information
%div.row
  %div.col.s12
    %table.responsive-table
      %thead
        %tr
          %th Name
          %th Size
          %th Created At
      %tbody
        %tr
          %td= @file_info.name
          %td= number_to_human_size(@file_info.content_size)
          %td= @file_info.created_at


%div.row
  %div.col.s12
    %h4 Delete This File
%div.row
  = form_with model: @file_info, method: :delete, html: {class: "col s12"}, local: true do |form|
    %div.row
      %div.input-field.col.s8
        = label_tag :password, "Password"
        = password_field_tag :password
      %div.col.s4
        = form.submit "Delete", class: "waves-effect waves-light btn-large"
